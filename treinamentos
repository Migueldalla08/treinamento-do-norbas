let numeros = [3, 6, 9, 12];
let soma = 0;
for (let i = 0; i < numeros.length; i++) {
  soma += numeros[i];
}
let media = soma / numeros.length;
console.log("Média:", media);  // Saída: 30

let paises =["Brasil", "Argentina", "Chile"];
